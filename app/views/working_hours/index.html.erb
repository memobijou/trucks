<p id="notice"><%= notice %></p>

<h1>Listing Working Hours</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Start time</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @working_hours.each do |working_hour| %>
      <tr>
        <td><%= working_hour.day.day %></td>
        <td><%= working_hour.start_time.to_s(:time) %></td>
        <td><%= working_hour.end_time.to_s(:time)%></td>
        <td><%= link_to 'Show', working_hour %></td>
        <td><%= link_to 'Edit', edit_working_hour_path(working_hour) %></td>
        <td><%= link_to 'Destroy', working_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

