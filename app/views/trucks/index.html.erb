<p id="notice"><%= notice %></p>

<h1>Listing Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Unitload</th>
      <th>Numberpallets</th>
      <th>Supplier</th>
      <th>Licenseplate</th>
      <th>Shippingagency</th>
      <th>Occupied</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.unitload %></td>
        <td><%= truck.numberpallets %></td>
        <td><%= truck.supplier %></td>
        <td><%= truck.licenseplate %></td>
        <td><%= truck.shippingagency %></td>
        <td><%= truck.occupied %></td>
        <td><%= link_to 'Show', truck %></td>
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
        <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

