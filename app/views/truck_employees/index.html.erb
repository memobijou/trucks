<h1>Listing Truck Employees</h1>

<table>
  <thead>
    <tr>
      <th>Truck</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @truck_employees.each do |truck_employee| %>
      <tr>
        <td><%= truck_employee.truck %></td>
        <td><%= truck_employee.employee %></td>
        <td><%= link_to 'Show', truck_employee %></td>
        <td><%= link_to 'Edit', edit_truck_employee_path(truck_employee) %></td>
        <td><%= link_to 'Destroy', truck_employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

