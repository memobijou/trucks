<h1>Listing Employee Supervisors</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Supervisor</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_supervisors.each do |employee_supervisor| %>
      <tr>
        <td><%= employee_supervisor.employee %></td>
        <td><%= employee_supervisor.supervisor %></td>
        <td><%= employee_supervisor.priority %></td>
        <td><%= link_to 'Show', employee_supervisor %></td>
        <td><%= link_to 'Edit', edit_employee_supervisor_path(employee_supervisor) %></td>
        <td><%= link_to 'Destroy', employee_supervisor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

